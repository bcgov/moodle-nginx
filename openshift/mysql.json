{
  "apiVersion": "template.openshift.io/v1",
  "kind": "Template",
  "labels": {
    "template": "${APP_NAME}"
  },
  "message": "${APP_NAME} has been created.",
  "metadata": {
    "annotations": {
      "description": "${APP_NAME}",
      "openshift.io/display-name": "Moodle ${APP_NAME}",
      "openshift.io/long-description": "This template provides a Moodle build consisting of deployments for: nginx (web), php, mysql, redis.",
      "tags": "application,${APP_NAME}"
    },
    "name": "${APP_NAME}"
  },
  "objects": [
    {
			"apiVersion": "v1",
			"kind": "Secret",
			"metadata": {
				"annotations": {
					"template.openshift.io/expose-database_name": "{.data['database-name']}",
					"template.openshift.io/expose-password": "{.data['database-password']}",
					"template.openshift.io/expose-root_password": "{.data['database-root-password']}",
					"template.openshift.io/expose-username": "{.data['database-user']}"
				},
				"name": "${APP_NAME}-secrets"
			},
			"stringData": {
				"database-name": "${DB_NAME}",
				"database-password": "${DB_PASSWORD}",
				"database-root-password": "${DB_ROOT_PASSWORD}",
				"database-user": "${DB_USER}"
			}
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "${APP_NAME}"
      },
      "spec": {
        "ports": [
          {
            "name": "${APP_NAME}",
            "port": 3306
          }
        ],
        "selector": {
          "deploymentconfig": "${APP_NAME}"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "metadata": {
        "name": "moodle-mysql"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "${VOLUME_SIZE}"
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "metadata": {
        "name": "moodle-cache-data"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "1Gi"
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "metadata": {
        "name": "moodle-web-run"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "1Gi"
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "annotations": {
          "template.alpha.openshift.io/wait-for-ready": "true"
        },
        "name": "${APP_NAME}",
        "namespace": "${PROJECT_NAMESPACE}",
        "labels": {
          "service": "${APP_NAME}"
        }
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "deploymentconfig": "${APP_NAME}"
        },
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 600,
            "maxUnavailable": "25%",
            "maxSurge": "25%"
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "deploymentconfig": "${APP_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "${IMAGE_STREAM}",
                "name": "${APP_NAME}",
                "restartPolicy": "Always",
                "imagePullPolicy": "Always",
                "livenessProbe": {
                  "exec": {
                    "command": "command: [\"sh\", \"-c\", \"exec mysqladmin status -uroot -p$DB_ROOT_PASSWORD\"]"
                  },
                  "initialDelaySeconds": 120,
                  "periodSeconds": 60,
                  "timeoutSeconds": 180,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "readinessProbe": {
                  "exec": {
                    "command": "command: [\"sh\", \"-c\", \"exec mysqladmin status -uroot -p$DB_ROOT_PASSWORD\"]"
                  },
                  "initialDelaySeconds": 120,
                  "periodSeconds": 60,
                  "timeoutSeconds": 180,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "ports": [
                  {
                    "containerPort": 3306
                  }
                ],
                "volumeMounts": [
                  {
                    "mountPath": "/var/lib/mysql",
                    "name": "moodle-mysql-data"
                  }
                ],
                "resources": {
                  "limits": {
                    "memory": "${MEMORY_LIMIT}",
                    "cpu": "${CPU_LIMIT}"
                  },
                  "requests": {
                    "memory": "${MEMORY_REQUEST}",
                    "cpu": "${CPU_REQUEST}"
                  }
                },
                "env": [
                  {
                    "name": "PROJECT_NAMESPACE",
                    "value": "${PROJECT_NAMESPACE}"
                  },
                  {
                    "name": "MYSQL_DATABASE",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-name",
                        "name": "${APP_NAME}-secrets"
                      }
                    }
                  },
                  {
                    "name": "MYSQL_USER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-user",
                        "name": "${APP_NAME}-secrets"
                      }
                    }
                  },
                  {
                    "name": "MYSQL_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-password",
                        "name": "${APP_NAME}-secrets"
                      }
                    }
                  },
                  {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-root-password",
                        "name": "${APP_NAME}-secrets"
                      }
                    }
                  }
                ]
              }
            ],
            "volumes": [
              {
                "name": "moodle-mysql-data",
                "persistentVolumeClaim": {
                  "claimName": "moodle-mysql-data"
                }
              },
              {
                "name": "${APP_NAME}-config",
                "configMap": {
                  "name": "${APP_NAME}-config"
                }
              }
            ]
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "revisionHistoryLimit": 10,
        "test": false
      }
    }
  ],
  "parameters": [
    {
      "description": "Application name.",
      "displayName": "App Name",
      "name": "APP_NAME",
      "required": true,
      "value": "web"
    },
    {
      "description": "The OpenShift Namespace where the ImageStream resides.",
      "displayName": "Namespace",
      "name": "PROJECT_NAMESPACE",
      "required": true,
      "value": "e66ac2-dev"
    },
    {
      "description": "Moodle data path.",
      "displayName": "Moodle Data Path",
      "name": "DB_DATA_PATH",
      "required": true,
      "value": "/var/lib/mysql"
    },
    {
      "description": "Image stream tag",
      "displayName": "Image Stream Tag",
      "required": true,
      "name": "IMAGE_STREAM"
    },
    {
      "description": "Request amount of CPU for the container.",
      "displayName": "CPU Request",
      "name": "CPU_REQUEST",
      "required": true,
      "value": "2000m"
    },
    {
      "description": "Maximum amount of CPU the container can use.",
      "displayName": "CPU Limit",
      "name": "CPU_LIMIT",
      "required": true,
      "value": "2000m"
    },
    {
      "description": "Request amount of memory for the container.",
      "displayName": "Memory Request",
      "name": "MEMORY_REQUEST",
      "required": true,
      "value": "512Mi"
    },
    {
      "description": "Maximum amount of memory the container can use.",
      "displayName": "Memory Limit",
      "name": "MEMORY_LIMIT",
      "required": true,
      "value": "2Gi"
    },
    {
      "description": "Volume space available for Moodle application, e.g. 512Mi, 2Gi.",
      "displayName": "Moodle Volume Capacity",
      "name": "VOLUME_SIZE",
      "required": true,
      "value": "10Gi"
    },
    {
      "description": "Server document root.",
      "displayName": "Server Root",
      "name": "DOCUMENT_ROOT",
      "required": true,
      "value": "/app/public"
    }
  ]
}

{
  "apiVersion": "template.openshift.io/v1",
  "kind": "Template",
  "labels": {
    "template": "${POD_NAME}"
  },
  "message": "Moodle cron job",
  "metadata": {
    "annotations": {
      "description": "Moodle cron job runner",
      "openshift.io/display-name": "Moodle",
      "openshift.io/long-description": "This template provides a Moodle buuld consisting of pods for: nginx, php, mysql, redis.",
      "tags": "application,${POD_NAME}"
    },
    "name": "${POD_NAME}"
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "nfs": {
        "path": "/app/moodledata"
      },
      "metadata": {
        "name": "moodledata"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "10Gi"
          }
        }
      }
    },
    {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "${BACKUP_DATA_MOUNT_PVC_NAME}"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "5Gi"
          }
        },
        "storageClassName": "netapp-file-backup"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "annotations": {
          "template.alpha.openshift.io/wait-for-ready": "true"
        },
        "name": "${POD_NAME}",
        "namespace": "${DEPLOY_NAMESPACE}",
        "labels": {
          "service": "${POD_NAME}"
        }
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "deploymentconfig": "${POD_NAME}"
        },
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 600,
            "maxUnavailable": "25%",
            "maxSurge": "25%"
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "deploymentconfig": "${POD_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "${IMAGE_STREAM}",
                "name": "${POD_NAME}",
                "restartPolicy": "Always",
                "imagePullPolicy": "Always",
                "volumeMounts": [
                  {
                    "mountPath": "${MOODLE_DATA_PATH}",
                    "name": "${DATA_MOUNT_PVC_NAME}"
                  },
                  {
                    "mountPath": "${MOODLE_APP_DATA_PATH}",
                    "name": "${APP_DATA_MOUNT_PVC_NAME}"
                  },
                  {
                    "mountPath": "${MOODLE_BACKUP_DATA_PATH}",
                    "name": "${BACKUP_DATA_MOUNT_PVC_NAME}"
                  },
                  {
                    "name": "env-data",
                    "mountPath": "/.env",
                    "subPath": ".env"
                  }
                ],
                "resources": {
                  "limits": {
                    "memory": "${MEMORY_LIMIT}",
                    "cpu": "${CPU_LIMIT}"
                  },
                  "requests": {
                    "memory": "${MEMORY_REQUEST}",
                    "cpu": "${CPU_REQUEST}"
                  }
                },
                "env": [
                  {
                    "name": "APP_NAME",
                    "value": "${APP_NAME}"
                  },
                  {
                    "name": "DB_USER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${APP_NAME}-secrets",
                        "key": "database-user"
                      }
                    }
                  },
                  {
                    "name": "DB_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${APP_NAME}-secrets",
                        "key": "database-password"
                      }
                    }
                  },
                  {
                    "name": "MYSQL_USER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-user",
                        "name": "${APP_NAME}-secrets"
                      }
                    }
                  },
                  {
                    "name": "MYSQL_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-password",
                        "name": "${APP_NAME}-secrets"
                      }
                    }
                  },
                  {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-root-password",
                        "name": "${APP_NAME}-secrets"
                      }
                    }
                  },
                  {
                    "name": "MYSQL_DATABASE",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-name",
                        "name": "${APP_NAME}-secrets"
                      }
                    }
                  }
                ]
              }
            ],
            "volumes": [
              {
                "name": "${DATA_MOUNT_PVC_NAME}",
                "persistentVolumeClaim": {
                  "claimName": "${DATA_MOUNT_PVC_NAME}"
                }
              },
              {
                "name": "${APP_DATA_MOUNT_PVC_NAME}",
                "persistentVolumeClaim": {
                  "claimName": "${APP_DATA_MOUNT_PVC_NAME}"
                }
              },
              {
                "name": "${BACKUP_DATA_MOUNT_PVC_NAME}",
                "persistentVolumeClaim": {
                  "claimName": "${BACKUP_DATA_MOUNT_PVC_NAME}"
                }
              },
              {
                "name": "${POD_NAME}-config",
                "configMap": {
                  "name": "${POD_NAME}-config",
                  "defaultMode": 420
                }
              },
              {
                "name": "env-data",
                "configMap": {
                  "name": "moodle-env",
                  "items": [
                    {
                      "key": ".env",
                      "path": ".env"
                    }
                  ]
                }
              }
            ]
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "revisionHistoryLimit": 10,
        "test": false
      }
    }
  ],
  "parameters": [
    {
      "description": "Application name.",
      "displayName": "App Name",
      "name": "APP_NAME",
      "value": "moodle"
    },
    {
      "description": "Pod name.",
      "displayName": "Pod Name",
      "name": "POD_NAME",
      "value": "cron"
    },
    {
      "description": "Website name.",
      "displayName": "Site Name",
      "name": "SITE_NAME",
      "required": true,
      "value": "${SITE_NAME}"
    },
    {
      "description": "Moodle data path.",
      "displayName": "Moodle Data Path",
      "name": "MOODLE_DATA_PATH",
      "value": "/var/moodledata"
    },
    {
      "description": "Moodle app data path.",
      "displayName": "Moodle App Data Path",
      "name": "MOODLE_APP_DATA_PATH",
      "value": "/var/www/html"
    },
    {
      "description": "Moodle backup data path.",
      "displayName": "Moodle Backup Data Path",
      "name": "MOODLE_BACKUP_DATA_PATH",
      "value": "/tmp/backups"
    },
    {
      "description": "Moodle data. Saved user files, backups, etc.",
      "displayName": "Data PVC",
      "name": "DATA_MOUNT_PVC_NAME",
      "value": "moodle-user-data"
    },
    {
      "description": "Moodle app data. Shared between php, we and cron pods.",
      "displayName": "Moodle App Data",
      "name": "APP_DATA_MOUNT_PVC_NAME",
      "value": "moodle-app-data"
    },
    {
      "description": "Moodle file backups",
      "displayName": "Backup Data PVC",
      "name": "BACKUP_DATA_MOUNT_PVC_NAME",
      "value": "moodle-backup-data"
    },
    {
      "description": "Image registry",
      "displayName": "Image Registry",
      "name": "IMAGE_REGISTRY",
      "value": "image-registry.openshift-image-registry.svc:5000"
    },
    {
      "description": "Build namespace.",
      "displayName": "Build Namespace",
      "required": true,
      "name": "BUILD_NAMESPACE"
    },
    {
      "description": "Deploy namespace.",
      "displayName": "Deploy Namespace",
      "required": true,
      "name": "DEPLOY_NAMESPACE"
    },
    {
      "description": "Image stream tag",
      "displayName": "Image Stream Tag",
      "required": true,
      "name": "IMAGE_STREAM"
    },
    {
      "description": "Maximum amount of memory the container can use.",
      "displayName": "Memory Limit",
      "name": "MEMORY_LIMIT",
      "value": "2Gi"
    },
    {
      "description": "Maximum amount of memory the container can use.",
      "displayName": "Memory Request",
      "name": "MEMORY_REQUEST",
      "value": "1Gi"
    },
    {
      "description": "Maximum CPU",
      "displayName": "CPU Limit",
      "name": "CPU_LIMIT",
      "value": "2"
    },
    {
      "description": "Requested CPU",
      "displayName": "CPU Request",
      "name": "CPU_REQUEST",
      "value": "0.5"
    }
  ]
}

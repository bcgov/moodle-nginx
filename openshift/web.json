{
  "apiVersion": "template.openshift.io/v1",
  "kind": "Template",
  "labels": {
    "template": "${APP_NAME}"
  },
  "message": "${APP_NAME} has been created.",
  "metadata": {
    "annotations": {
      "description": "${APP_NAME}",
      "openshift.io/display-name": "Moodle ${APP_NAME}",
      "openshift.io/long-description": "This template provides a Moodle build consisting of deployments for: nginx (web), php, mysql, redis.",
      "tags": "application,${APP_NAME}"
    },
    "name": "${APP_NAME}"
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "${APP_NAME}"
      },
      "spec": {
        "ports": [
          {
            "name": "${APP_NAME}",
            "port": 8081
          }
        ],
        "selector": {
          "deploymentconfig": "${APP_NAME}"
        }
      }
    },
    {
			"apiVersion": "v1",
			"kind": "Route",
			"metadata": {
        "name": "${APP_NAME}",
        "namespace": "${PROJECT_NAMESPACE}",
        "labels": {
          "service": "${APP_NAME}"
        }
      },
      "spec": {
        "host": "${SITE_URL}",
        "to": {
          "kind": "Service",
          "name": "${APP_NAME}",
          "weight": 100
        },
        "conditions": [
          {
            "type": "Admitted",
            "status": "True"
          }
        ],
        "tls": {
          "termination": "edge",
          "insecureEdgeTerminationPolicy": "Redirect"
        },
        "port": {
          "targetPort": 8081
        },
        "wildcardPolicy": "None"
      }
		},
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "metadata": {
        "name": "moodle-app-data"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "${VOLUME_SIZE}"
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "metadata": {
        "name": "moodle-cache-data"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "1Gi"
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "metadata": {
        "name": "moodle-web-run"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "1Gi"
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "annotations": {
          "template.alpha.openshift.io/wait-for-ready": "true"
        },
        "name": "${APP_NAME}",
        "namespace": "${PROJECT_NAMESPACE}",
        "labels": {
          "service": "${APP_NAME}"
        }
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "deploymentconfig": "${APP_NAME}"
        },
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 600,
            "maxUnavailable": "25%",
            "maxSurge": "25%"
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "deploymentconfig": "${APP_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "${IMAGE_STREAM}",
                "name": "${APP_NAME}",
                "restartPolicy": "Always",
                "imagePullPolicy": "Always",
                "livenessProbe": {
                  "httpGet": {
                    "path": "${SITE_URL}",
                    "port": 8081,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 90,
                  "periodSeconds": 60,
                  "timeoutSeconds": 180,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "ports": [
                  {
                    "containerPort": 8081
                  }
                ],
                "volumeMounts": [
                  {
                    "mountPath": "${MOODLE_DATA_MOUNT_PATH}",
                    "name": "moodle-app-data"
                  },
                  {
                    "mountPath": "${MOODLE_CACHE_PATH}",
                    "name": "moodle-cache-data"
                  },
                  {
                    "mountPath": "/etc/nginx/conf.d",
                    "name": "${APP_NAME}-config"
                  },
                  {
                    "mountPath": "/var/run/",
                    "name": "moodle-web-run"
                  }
                ],
                "resources": {
                  "limits": {
                    "memory": "${MEMORY_LIMIT}",
                    "cpu": "${CPU_LIMIT}"
                  },
                  "requests": {
                    "memory": "${MEMORY_REQUEST}",
                    "cpu": "${CPU_REQUEST}"
                  }
                },
                "env": [
                  {
                    "name": "APP_NAME",
                    "value": "${APP_NAME}"
                  },
                  {
                    "name": "SITE_URL",
                    "value": "${SITE_URL}"
                  }
                ]
              }
            ],
            "volumes": [
              {
                "name": "moodle-app-data",
                "persistentVolumeClaim": {
                  "claimName": "moodle-app-data"
                }
              },
              {
                "name": "moodle-cache-data",
                "persistentVolumeClaim": {
                  "claimName": "moodle-cache-data"
                }
              },
              {
                "name": "moodle-web-run",
                "persistentVolumeClaim": {
                  "claimName": "moodle-web-run"
                }
              },
              {
                "name": "${APP_NAME}-config",
                "configMap": {
                  "name": "${APP_NAME}-config"
                }
              },
              {
                "name": "env-data",
                "configMap": {
                  "name": "moodle-env",
                  "items": [
                    {
                      "key": ".env",
                      "path": ".env"
                    }
                  ]
                }
              }
            ]
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "revisionHistoryLimit": 10,
        "test": false
      }
    }
  ],
  "parameters": [
    {
      "description": "Application name.",
      "displayName": "App Name",
      "name": "APP_NAME",
      "required": true,
      "value": "web"
    },
    {
      "description": "The OpenShift Namespace where the ImageStream resides.",
      "displayName": "Namespace",
      "name": "PROJECT_NAMESPACE",
      "required": true,
      "value": "e66ac2-dev"
    },
    {
      "description": "Moodle data path.",
      "displayName": "Moodle Data Path",
      "name": "MOODLE_DATA_PATH",
      "required": true,
      "value": "/app/moodledata"
    },
    {
      "description": "Moodle cache path.",
      "displayName": "Moodle cache Path",
      "name": "MOODLE_CACHE_PATH",
      "required": true,
      "value": "/var/cache/nginx"
    },
    {
      "description": "Website URL.",
      "displayName": "URL",
      "name": "SITE_URL",
      "required": true,
      "value": "moodle-e66ac2-dev.apps.silver.devops.gov.bc.ca"
    },
    {
      "description": "Image stream tag",
      "displayName": "Image Stream Tag",
      "required": true,
      "name": "IMAGE_STREAM"
    },
    {
      "description": "Request amount of CPU for the container.",
      "displayName": "CPU Request",
      "name": "CPU_REQUEST",
      "required": true,
      "value": "100m"
    },
    {
      "description": "Maximum amount of CPU the container can use.",
      "displayName": "CPU Limit",
      "name": "CPU_LIMIT",
      "required": true,
      "value": "1000m"
    },
    {
      "description": "Request amount of memory for the container.",
      "displayName": "Memory Request",
      "name": "MEMORY_REQUEST",
      "required": true,
      "value": "256Mi"
    },
    {
      "description": "Maximum amount of memory the container can use.",
      "displayName": "Memory Limit",
      "name": "MEMORY_LIMIT",
      "required": true,
      "value": "1Gi"
    },
    {
      "description": "Volume space available for Moodle application, e.g. 512Mi, 2Gi.",
      "displayName": "Moodle Volume Capacity",
      "name": "VOLUME_SIZE",
      "required": true,
      "value": "10Gi"
    },
    {
      "description": "Path where the persistent volume will be mounted",
      "displayName": "Mount Path",
      "name": "MOODLE_DATA_MOUNT_PATH",
      "required": true,
      "value": "/app"
    }
  ]
}

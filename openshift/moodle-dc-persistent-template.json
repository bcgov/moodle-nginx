{
  "apiVersion": "template.openshift.io/v1",
  "kind": "Template",
  "labels": {
    "template": "${APP_NAME}"
  },
  "message": "The following Site has been created in your project: ${APP_NAME}.\nDB: ${APP_NAME}.\n\n  URL: ${SITE_URL}",
  "metadata": {
    "annotations": {
      "description": "Moodle application service, with persistent storage.",
      "iconClass": "icon-mysql-database",
      "openshift.io/display-name": "Moodle",
      "openshift.io/long-description": "This template provides a standalone Moodle server (PHP, Moodle).  The application cache is stored on persistent storage.  The database name, username, and password are chosen via parameters when provisioning this service.",
      "tags": "application,${APP_NAME}"
    },
    "name": "${NAME}"
  },
  "objects": [
    {
			"apiVersion": "v1",
			"kind": "Secret",
			"metadata": {
				"annotations": {
					"template.openshift.io/expose-database_name": "{.data['database-name']}",
					"template.openshift.io/expose-password": "{.data['database-password']}",
					"template.openshift.io/expose-root_password": "{.data['database-root-password']}",
					"template.openshift.io/expose-username": "{.data['database-user']}"
				},
				"name": "${APP_NAME}-secrets"
			},
			"stringData": {
				"database-password": "${DB_PASSWORD}"
			}
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "${WEB_SERVICE}"
      },
      "spec": {
        "ports": [
          {
            "name": "${WEB_SERVICE}",
            "port": 8080
          }
        ],
        "selector": {
          "deploymentconfig": "${WEB_SERVICE}"
        }
      }
    },
    {
			"apiVersion": "v1",
			"kind": "Route",
			"metadata": {
        "name": "${APP_NAME}",
        "namespace": "${DEPLOY_NAMESPACE}",
        "labels": {
          "service": "${WEB_SERVICE}"
        }
      },
      "spec": {
        "host": "${SITE_URL}",
        "to": {
          "kind": "Service",
          "name": "${WEB_SERVICE}",
          "weight": 100
        },
        "conditions": [
          {
            "type": "Admitted",
            "status": "True"
          }
        ],
        "tls": {
          "termination": "edge",
          "insecureEdgeTerminationPolicy": "Redirect"
        },
        "port": {
          "targetPort": 8080
        },
        "wildcardPolicy": "None"
      }
		},
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "nfs": {
        "path": "${MOODLE_DATA_MOUNT_PATH}"
      },
      "metadata": {
        "name": "${APP_NAME}-data"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "${MOODLE_VOLUME_CAPACITY}"
          }
        }
      }
    },
    {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "file-backup-data"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "${BACKUP_VOLUME_SIZE}"
          }
        },
        "storageClassName": "netapp-file-backup"
      }
    },
    {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "env-data"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "250Mi"
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "annotations": {
          "template.alpha.openshift.io/wait-for-ready": "true"
        },
        "name": "${PHP_IMAGE_NAME}",
        "namespace": "${DEPLOY_NAMESPACE}",
        "labels": {
          "service": "${PHP_IMAGE_NAME}"
        }
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "deploymentconfig": "${PHP_IMAGE_NAME}"
        },
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 600,
            "maxUnavailable": "25%",
            "maxSurge": "25%"
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "deploymentconfig": "${PHP_IMAGE_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "${IMAGE_REGISTRY}/${BUILD_NAMESPACE}/${PHP_IMAGE_NAME}",
                "name": "${PHP_IMAGE_NAME}",
                "restartPolicy": "Always",
                "imagePullPolicy": "Always",
                "livenessProbe": {
                  "exec": {
                    "command": [
                      "php-fpm-healthcheck",
                      "--listen-queue=10 # fails if there are more than 10 processes waiting in the fpm queue",
                      "--accepted-conn=5000 # fails after fpm has served more than 5k requests, this will force the pod to reset, use with caution"
                    ]
                  },
                  "initialDelaySeconds": 90,
                  "periodSeconds": 60,
                  "timeoutSeconds": 180,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "readinessProbe": {
                  "exec": {
                    "command": [
                      "php-fpm-healthcheck"
                    ]
                  },
                  "initialDelaySeconds": 10,
                  "periodSeconds": 5
                },
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ],
                "volumeMounts": [
                  {
                    "mountPath": "${MOODLE_DATA_MOUNT_PATH}",
                    "name": "${APP_NAME}-data"
                  },
                  {
                    "mountPath": "/tmp/file-backups",
                    "name": "file-backup-data"
                  },
                  {
                    "name": "env-data",
                    "mountPath": "/.env",
                    "subPath": ".env"
                  }
                ],
                "resources": {
                  "limits": {
                    "memory": "${PHP_MEMORY_LIMIT}",
                    "cpu": "${PHP_CPU_LIMIT}"
                  },
                  "requests": {
                    "memory": "${PHP_MEMORY_REQUEST}",
                    "cpu": "${PHP_CPU_REQUEST}"
                  }
                },
                "env": [
                  {
                    "name": "APP_NAME",
                    "value": "${APP_NAME}"
                  },
                  {
                    "name": "SITE_URL",
                    "value": "https://${SITE_URL}"
                  },
                  {
                    "name": "DB_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${APP_NAME}-secrets",
                        "key": "database-password"
                      }
                    }
                  }
                ]
              },
              {
                "image": "${IMAGE_REGISTRY}/${BUILD_NAMESPACE}/${CRON_IMAGE_NAME}",
                "name": "${CRON_IMAGE_NAME}",
                "restartPolicy": "Always",
                "imagePullPolicy": "Always",
                "livenessProbe": {
                  "exec": {
                    "command": [
                      "php-fpm-healthcheck",
                      "--listen-queue=10 # fails if there are more than 10 processes waiting in the fpm queue",
                      "--accepted-conn=5000 # fails after fpm has served more than 5k requests, this will force the pod to reset, use with caution"
                    ]
                  }
                },
                "volumeMounts": [
                  {
                    "mountPath": "${MOODLE_DATA_MOUNT_PATH}",
                    "name": "${APP_NAME}-data"
                  },
                  {
                    "name": "env-data",
                    "mountPath": "/.env",
                    "subPath": ".env"
                  }
                ],
                "resources": {
                  "limits": {
                    "memory": "${CRON_MEMORY_LIMIT}",
                    "cpu": "${CRON_CPU_LIMIT}"
                  },
                  "requests": {
                    "memory": "${CRON_MEMORY_REQUEST}",
                    "cpu": "${CRON_CPU_REQUEST}"
                  }
                },
                "env": [
                  {
                    "name": "CRON_IMAGE_NAME",
                    "value": "${CRON_IMAGE_NAME}"
                  },
                  {
                    "name": "DB_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${APP_NAME}-secrets",
                        "key": "database-password"
                      }
                    }
                  }
                ]
              }
            ],
            "volumes": [
              {
                "name": "${APP_NAME}-data",
                "persistentVolumeClaim": {
                  "claimName": "${APP_NAME}-data"
                }
              },
              {
                "name": "file-backup-data",
                "persistentVolumeClaim": {
                  "claimName": "file-backup-data"
                }
              },
              {
                "name": "${PHP_IMAGE_NAME}-config",
                "configMap": {
                  "name": "${PHP_IMAGE_NAME}-config",
                  "defaultMode": 420
                }
              },
              {
                "name": "env-data",
                "configMap": {
                  "name": "moodle-env",
                  "items": [
                    {
                      "key": ".env",
                      "path": ".env"
                    }
                  ]
                }
              }
            ]
          }
        },
        "revisionHistoryLimit": 10,
        "test": false
      }
    }
  ],
  "parameters": [
    {
      "description": "Application name.",
      "displayName": "App Name",
      "name": "APP_NAME",
      "required": true,
      "value": "moodle"
    },
    {
      "description": "Website URL.",
      "displayName": "URL",
      "name": "SITE_URL",
      "required": true,
      "value": "${SITE_URL}"
    },
    {
      "description": "Web Service Name",
      "displayName": "Web Service",
      "name": "WEB_SERVICE",
      "value": "web"
    },
    {
      "description": "Image registry",
      "displayName": "Image Registry",
      "name": "IMAGE_REGISTRY",
      "value": "image-registry.openshift-image-registry.svc:5000"
    },
    {
      "description": "Build namespace.",
      "displayName": "Build Namespace",
      "required": true,
      "name": "BUILD_NAMESPACE"
    },
    {
      "description": "PHP Image",
      "displayName": "PHP Image",
      "required": true,
      "name": "PHP_IMAGE_NAME"
    },
    {
      "description": "Cron Image",
      "displayName": "Cron Image",
      "required": true,
      "name": "CRON_IMAGE_NAME"
    },
    {
      "description": "Volume space available for Moodle application, e.g. 512Mi, 2Gi.",
      "displayName": "Moodle Volume Capacity",
      "name": "MOODLE_VOLUME_CAPACITY",
      "required": true,
      "value": "5Gi"
    },
    {
      "description": "Volume for storing file backups",
      "displayName": "Moodle File backups",
      "name": "BACKUP_VOLUME_SIZE",
      "required": true,
      "value": "10Gi"
    },
    {
      "description": "Path where the persistent volume will be mounted",
      "displayName": "Mount Path",
      "name": "MOODLE_DATA_MOUNT_PATH",
      "required": true,
      "value": "/var/www/html/moodledata"
    },
    {
      "description": "The OpenShift Namespace where the ImageStream resides.",
      "displayName": "Namespace",
      "name": "DEPLOY_NAMESPACE",
      "required": true
    },
    {
      "description": "Requested amount of memory for the PHP container.",
      "displayName": "PHP Request Memory",
      "name": "PHP_MEMORY_REQUEST",
      "value": "70Mi"
    },
    {
      "description": "Maximum amount of memory the PHP container can use.",
      "displayName": "PHP Memory Limit",
      "name": "PHP_MEMORY_LIMIT",
      "value": "256Mi"
    },
    {
      "description": "Requested CPU for the PHP container.",
      "displayName": "PHP Request CPU",
      "name": "PHP_CPU_REQUEST",
      "value": "50m"
    },
    {
      "description": "Maximum CPU the PHP container can use.",
      "displayName": "PHP CPU Limit",
      "name": "PHP_CPU_LIMIT",
      "value": "150m"
    },
    {
      "description": "Requested amount of memory for the CRON container.",
      "displayName": "CRON Memory Request",
      "name": "CRON_MEMORY_REQUEST",
      "value": "50Mi"
    },
    {
      "description": "Maximum amount of memory the CRON container can use.",
      "displayName": "CRON Memory Limit",
      "name": "CRON_MEMORY_LIMIT",
      "value": "128Mi"
    },
    {
      "description": "Requested amount of CPU for the CRON container.",
      "displayName": "CRON CPU Request",
      "name": "CRON_CPU_REQUEST",
      "value": "30m"
    },
    {
      "description": "Maximum amount of CPU the CRON container can use.",
      "displayName": "CRON CPU Limit",
      "name": "CRON_CPU_LIMIT",
      "value": "150m"
    }
  ]
}

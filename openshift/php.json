{
  "apiVersion": "template.openshift.io/v1",
  "kind": "Template",
  "labels": {
    "template": "${APP_NAME}"
  },
  "message": "${APP_NAME}",
  "metadata": {
    "annotations": {
      "description": "${APP_NAME} for Moodle",
      "openshift.io/display-name": "${APP_NAME}",
      "openshift.io/long-description": "This template provides a Moodle build consisting of pods for: nginx, php, mysql, redis.",
      "tags": "application,${APP_NAME}"
    },
    "name": "${APP_NAME}"
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "${APP_NAME}"
      },
      "spec": {
        "ports": [
          {
            "name": "${APP_NAME}",
            "port": 9000
          }
        ],
        "selector": {
          "deploymentconfig": "${APP_NAME}"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "metadata": {
        "name": "${DATA_MOUNT_PVC_NAME}"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "${VOLUME_SIZE}"
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "metadata": {
        "name": "${APP_DATA_MOUNT_PVC_NAME}"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "${VOLUME_SIZE}"
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "annotations": {
          "template.alpha.openshift.io/wait-for-ready": "true"
        },
        "name": "${APP_NAME}",
        "namespace": "${DEPLOY_NAMESPACE}",
        "labels": {
          "service": "${APP_NAME}"
        }
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "deploymentconfig": "${APP_NAME}"
        },
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 600,
            "maxUnavailable": "25%",
            "maxSurge": "25%"
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "deploymentconfig": "${APP_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "${IMAGE_STREAM}",
                "name": "${APP_NAME}",
                "restartPolicy": "Always",
                "imagePullPolicy": "Always",
                "ports": [
                  {
                    "containerPort": 9000
                  }
                ],
                "volumeMounts": [
                  {
                    "mountPath": "${MOODLE_DATA_PATH}",
                    "name": "${DATA_MOUNT_PVC_NAME}"
                  },
                  {
                    "mountPath": "${MOODLE_APP_DATA_PATH}",
                    "name": "${APP_DATA_MOUNT_PVC_NAME}"
                  },
                  {
                    "name": "env-data",
                    "mountPath": "/.env",
                    "subPath": ".env"
                  },
                  {
                    "name": "php-config",
                    "mountPath": "/php/conf.d/moodle-php.ini",
                    "subPath": "moodle-php.ini"
                  }
                ],
                "lifecycle": {
                  "postStart": {
                    "exec": {
                      "command": [
                        "/bin/sh",
                        "-c",
                        "cp -ru /app/public/. /var/www/html 2>/dev/null || :"
                      ]
                    }
                  }
                },
                "resources": {
                  "limits": {
                    "memory": "${MEMORY_LIMIT}",
                    "cpu": "${CPU_LIMIT}"
                  },
                  "requests": {
                    "memory": "${MEMORY_REQUEST}",
                    "cpu": "${CPU_REQUEST}"
                  }
                },
                "env": [
                  {
                    "name": "APP_NAME",
                    "value": "${APP_NAME}"
                  },
                  {
                    "name": "SITE_URL",
                    "value": "${SITE_URL}"
                  }
                ]
              }
            ],
            "volumes": [
              {
                "name": "${DATA_MOUNT_PVC_NAME}",
                "persistentVolumeClaim": {
                  "claimName": "${DATA_MOUNT_PVC_NAME}"
                }
              },
              {
                "name": "${APP_DATA_MOUNT_PVC_NAME}",
                "persistentVolumeClaim": {
                  "claimName": "${APP_DATA_MOUNT_PVC_NAME}"
                }
              },
              {
                "name": "${APP_NAME}-config",
                "configMap": {
                  "name": "${APP_NAME}-config",
                  "defaultMode": 420
                }
              },
              {
                "name": "env-data",
                "configMap": {
                  "name": "moodle-env",
                  "items": [
                    {
                      "key": ".env",
                      "path": ".env"
                    }
                  ]
                }
              },
              {
                "name": "php-config",
                "configMap": {
                  "name": "php-config",
                  "defaultMode": 420
                }
              }
            ]
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "revisionHistoryLimit": 10,
        "test": false
      }
    }
  ],
  "parameters": [
    {
      "description": "Application name",
      "displayName": "App Name",
      "name": "APP_NAME",
      "value": "Moodle"
    },
    {
      "description": "Site URL",
      "displayName": "URL",
      "name": "SITE_URL",
      "value": "https://moodle-950003-prod.apps.silver.devops.gov.bc.ca/"
    },
    {
      "description": "Moodle data path.",
      "displayName": "Moodle Data Path",
      "name": "MOODLE_DATA_PATH",
      "value": "/var/moodledata"
    },
    {
      "description": "Moodle app data path.",
      "displayName": "Moodle App Data Path",
      "name": "MOODLE_APP_DATA_PATH",
      "value": "/var/www/html"
    },
    {
      "description": "Image stream",
      "displayName": "Image Stream",
      "required": true,
      "name": "IMAGE_STREAM"
    },
    {
      "description": "Maximum amount of memory the container can use.",
      "displayName": "Memory Limit",
      "name": "MEMORY_LIMIT",
      "value": "1Gi"
    },
    {
      "description": "Maximum amount of memory the container can use.",
      "displayName": "Memory Request",
      "name": "MEMORY_REQUEST",
      "value": "1Gi"
    },
    {
      "description": "Maximum CPU",
      "displayName": "CPU Limit",
      "name": "CPU_LIMIT",
      "value": "1"
    },
    {
      "description": "Requested CPU",
      "displayName": "CPU Request",
      "name": "CPU_REQUEST",
      "value": "0.5"
    },
    {
      "description": "Moodle data. Saved user files, backups, etc.",
      "displayName": "Data PVC",
      "name": "DATA_MOUNT_PVC_NAME",
      "value": "moodle-user-data"
    },
    {
      "description": "Moodle app data. Shared between php, we and cron pods.",
      "displayName": "Moodle App Data",
      "name": "APP_DATA_MOUNT_PVC_NAME",
      "value": "moodle-app-data"
    },
    {
      "description": "Database host name.",
      "displayName": "DB Host",
      "name": "DB_HOST",
      "value": "mysql"
    },
    {
      "description": "Database secondary host name.",
      "displayName": "DB Secondary Host",
      "name": "DB_SECONDARY_NAME",
      "value": "mysql-read"
    },
    {
      "description": "Database Port opened for connections from other containers.",
      "displayName": "DB Port",
      "name": "DB_PORT",
      "value": "3306"
    },
    {
      "description": "The OpenShift Namespace where the ImageStream resides.",
      "displayName": "Namespace",
      "name": "DEPLOY_NAMESPACE",
      "required": true
    },
    {
      "description": "Name of the MySQL database accessed.",
      "displayName": "MySQL Database Name",
      "name": "DB_NAME",
      "value": "moodle"
    },
    {
      "description": "Volume space available for Moodle application, e.g. 512Mi, 2Gi.",
      "displayName": "Moodle Volume Capacity",
      "name": "VOLUME_SIZE",
      "value": "5Gi"
    }
  ]
}
